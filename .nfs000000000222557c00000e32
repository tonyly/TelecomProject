<!-- test scripts for login users -->
<script>
function User( username, password ){
	this.username = username;
	this.password = password;
}

<!-- temporary database of users using array -->
var database = new Array();
var numAccs = 0;

var addNewUser = function(){
	var userInput1=document.getElementById('EmailEntered').value;
	var userInput2=document.getElementById('PasswordEntered').value;
	database[numAccs] = new User( userInput1, userInput2 );
	numAccs++;
	alert('Successfully created account...' +userInput1);
	alert('Number of accounts in database: ' + numAccs);
};

var findUser = function(){
	var userInput3=document.getElementById('EmailEntered').value;
	var userInput4=document.getElementById('PasswordEntered').value;
	y = 0;
	for( i=0; i < numAccs; i++){
		if( database[i].username == userInput3 && database[i].password == userInput4 ){
			alert('login successful! Welcome '+userInput3);
			return;
		}
	}
	alert('login failed');
};



</script>



